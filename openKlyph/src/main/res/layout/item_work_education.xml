<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/work_layout"
        style="@style/Klyph.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ckoobafe_item_padding"
                android:paddingRight="@dimen/ckoobafe_item_padding" >

        <com.abewy.android.apps.openklyph.widget.KlyphImageView
            android:id="@+id/work_employer_profile_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/work_employer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Klyph.ListItem.PrimaryText" />

            <TextView
                android:id="@+id/work_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                style="@style/Klyph.ListItem.SecondaryText" />

            <TextView
                android:id="@+id/work_place_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                style="@style/Klyph.ListItem.SecondaryText"
                android:textColor="?android:attr/textColorTertiary" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/work_layout"
        android:background="@drawable/ab_solid_shadow_holo" >
    </RelativeLayout>

</RelativeLayout>