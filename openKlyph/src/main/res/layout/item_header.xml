<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ckoobafe_item_padding"
    android:paddingRight="@dimen/ckoobafe_item_padding"
    android:paddingTop="@dimen/ckoobafe_list_padding" >

    <TextView
        android:id="@+id/header_title"
        style="@style/Klyph.SecondaryText"
        android:textColor="?attr/themeColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="8dip"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/themeColor" />

</LinearLayout>