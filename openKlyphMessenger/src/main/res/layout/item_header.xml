<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/conversation_chooser_margin"
    android:orientation="vertical" >

    <!-- android:textColor="?attr/themeColor" -->
    <TextView
        android:id="@+id/header_title"
        
        android:textColor="?attr/headerTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dip_4"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:layout_marginBottom="4dp"
        android:background="?attr/headerTextBorderColor" />

</LinearLayout>